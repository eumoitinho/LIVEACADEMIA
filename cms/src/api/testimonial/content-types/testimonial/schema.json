{
  "kind": "collectionType",
  "collectionName": "testimonials",
  "info": {
    "singularName": "testimonial",
    "pluralName": "testimonials",
    "displayName": "Testimonial",
    "description": "Customer testimonials"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "customerName": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string"
    },
    "content": {
      "type": "text",
      "required": true
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5,
      "default": 5
    },
    "unit": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::unit.unit",
      "inversedBy": "testimonials"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "active": {
      "type": "boolean",
      "default": true
    }
  }
}
